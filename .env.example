# X402 + Sperax USDs Configuration
# Copy this file to .env and fill in your values

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================

# Your wallet private key (without 0x prefix)
PRIVATE_KEY=

# Arbitrum RPC URLs
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
ARBITRUM_SEPOLIA_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc

# Network to use: mainnet or sepolia
NETWORK=sepolia

# ============================================
# CONTRACT ADDRESSES
# ============================================

# Sperax USDs Token (Arbitrum Mainnet)
USDS_TOKEN_ADDRESS=0xD74f5255D557944cf7Dd0E45FF521520002D5748

# Sperax Vault (Arbitrum Mainnet)
USDS_VAULT_ADDRESS=0x8EC1877698ACF262Fe8Ad8a295ad94D6ea258988

# X402 Revenue Splitter (deploy your own)
REVENUE_SPLITTER_ADDRESS=

# ============================================
# FACILITATOR SERVER
# ============================================

# Facilitator server port
FACILITATOR_PORT=3002

# Facilitator URL (for clients)
FACILITATOR_URL=http://localhost:3002

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=100

# ============================================
# YIELD TRACKER
# ============================================

# Yield tracker server port
YIELD_TRACKER_PORT=3003

# Database URL (optional, uses SQLite by default)
DATABASE_URL=

# ============================================
# PLATFORM CONFIGURATION
# ============================================

# Platform wallet (receives platform fees)
PLATFORM_WALLET_ADDRESS=

# Default platform fee in basis points (2000 = 20%)
DEFAULT_PLATFORM_FEE_BPS=2000

# ============================================
# OPTIONAL: EXTERNAL SERVICES
# ============================================

# Alchemy API key (optional, for better RPC)
ALCHEMY_API_KEY=

# Arbiscan API key (for contract verification)
ARBISCAN_API_KEY=
